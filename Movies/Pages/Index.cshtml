@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="results">
        <h1><a href="/">Movies</a></h1>

        @if (Model.Movies.Count == 0)
        {
            <h2>No Results</h2>
        }

        @foreach (Movie movie in Model.Movies)
        {
            <div class="movie-entry" data-title="@movie.Title" data-mpaa="@movie.MPAA_Rating" 
                 data-imdb="@movie.IMDB_Rating" >
                <h2>
                    @movie.Title
                    @if (movie.Release_Year != null)
                    {
                        <span>(@movie.Release_Year)</span>
                    }
                </h2>
                @if (movie.Major_Genre != null)
                {
                    <div class="genre">@movie.Major_Genre</div>
                }
                @if (movie.MPAA_Rating != null)
                {
                    <div class="rating">Rated @movie.MPAA_Rating</div>
                }
                @if (movie.Director != null)
                {
                    <div class="director">Directed by @movie.Director</div>
                }
                @if (movie.IMDB_Rating != null || movie.Rotten_Tomatoes_Rating != null)
                {
                    <div class="ratings">
                        @if (movie.IMDB_Rating != null)
                        {
                            <div><span>IMDB</span> <h3>@movie.IMDB_Rating</h3></div>
                        }
                        @if (movie.Rotten_Tomatoes_Rating != null)
                        {
                            <div><span>Rotten Tomatoes</span> <h3>@movie.Rotten_Tomatoes_Rating</h3></div>
                        }
                    </div>
                }
            </div>
        }
    </div>
    <form method="post" id="search-and-filter-form">
        <input type="text" id="search" name="search" value="@Model.search" />
        <label>
            <input type="checkbox" value="G" class="mpaa" name="mpaa" checked="@Model.mpaa.Contains("G")" />
            Rated G
        </label>
        <label>
            <input type="checkbox" value="PG" class="mpaa" name="mpaa" checked="@Model.mpaa.Contains("PG")" />
            Rated PG
        </label>
        <label>
            <input type="checkbox" value="PG-13" class="mpaa" name="mpaa" checked="@Model.mpaa.Contains("PG-13")" />
            Rated PG-13
        </label>
        <label>
            <input type="checkbox" value="R" class="mpaa" name="mpaa" checked="@Model.mpaa.Contains("R")" />
            Rated R
        </label>
        <label>
            <input type="checkbox" value="NC-17" class="mpaa" name="mpaa" checked="@Model.mpaa.Contains("NC-17")" />
            Rated NC-17
        </label>
        <label>
            Minimum IMDB Rating
            <input type="number" min="0" max="10" step="0.1" id="minIMDB" name="minIMDB" value="@Model.minIMDB" />
        </label>
        <input type="submit" value="Search" />
    </form>
</div>
